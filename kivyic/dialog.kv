<InputDialog>:
    size_hint_y: None
    multiline: False
    #helper_text: 'Click Dismiss to cancel and return nothing'
    #helper_text: root.helper_text
    #helper_text_mode: "persistent"
    #hint_text: 'hint'

    hint_text: "Persistent helper text"
    helper_text: "Text is always here"
    helper_text_mode: "persistent"
    canvas.after:
        Color:
            rgba: 1,0,0,.3
        Rectangle:
            size: self.size
            pos: self.pos

