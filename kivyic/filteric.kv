<FilterGroupButton>
    orientation: 'horizontal'
    padding: '2dp',0, '8dp', 0
    spacing: '5dp'
    size_hint_x: None
    width: self.minimum_width
    canvas.before:
        Color:
            rgba: 1,1,1,1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:  [(5.0, 5.0), (0, 0), (0, 0), (5.0, 5.0)]
    Label:
        id: fg_button_label
        text: root.text
        font_size: '10dp'
        size_hint_x: None
        width: self.texture_size[0] + dp(5)
        color: 0,0,0,1
        font_name: 'DejaVuSans'
        on_text:
            self.update_texture()
            self.width = self.texture_size[0] + dp(5)
    ICIconLabel:
        icon: 'close-box'
        font_size: '15dp'
        color: 0,0,1,1

<FilterGroup>
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(15) #self.minimum_height
    MDLabel:
        id: lbl
        size_hint: None, 1
        width: '40dp'
        #height: '15dp'
    BoxLayout:
        orientation: 'horizontal'
        id: button_container
        padding: 0
        spacing: root.tag_spacing

<ICFilterPanel>:
    container: container
    orientation: 'vertical'
    padding: root.padding
    spacing: root.spacing
    size_hint_y: None
    height: self.minimum_height
    canvas:
        Color:
            rgba: 0,0,1,.3
        Rectangle:
            size: self.size
            pos: self.pos
    MDLabel:
        text: 'FILTERS'
    MDList:
        spacing: root.spacing
        size_hint_y: None
        height: self.minimum_height
        id: container