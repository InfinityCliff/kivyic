#:import MDLabel        kivymd.label.MDLabel
#:import MDList         kivymd.list.MDList
#:import ICIconLabel    kivyic.label.ICIconLabel

<FilterTag>
    orientation: 'horizontal'
    padding: '2dp',0, '8dp', 0
    spacing: '5dp'
    size_hint_x: None
    width: self.minimum_width
    canvas.before:
        Color:
            rgba: root.tag_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:  [(5.0, 5.0), (0, 0), (0, 0), (5.0, 5.0)]
        #Color:
        #    rgba: root.tag_border
        #Line:filter_criteria_dict
        #    points: (self.x, self.y, self.x + self.width, self.y, self.x + self.width, self.y + self.height, self.x, self.y + self.height)
        #    close: True
        #    width: 0.3
    Label:
        id: fg_button_label
        text: root.text
        font_size: '10dp'
        size_hint_x: None
        width: self.texture_size[0] + dp(5)
        color: root.tag_font_color
        font_name: 'DejaVuSans'
        on_text:
            self.update_texture()
            self.width = self.texture_size[0] + dp(5)
    ICIconLabel:
        icon: 'close-box'
        font_size: '15dp'
        color: root.tag_button_color

<FilterGroup>
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(15) #self.minimum_height
    MDLabel:
        id: lbl
        size_hint: None, 1
        width: '40dp'
        #height: '15dp'
    BoxLayout:
        orientation: 'horizontal'
        id: button_container
        padding: 0
        spacing: root.tag_spacing

<ICFilterPanel>:
    container: container
    orientation: 'vertical'
    padding: root.padding
    spacing: root.spacing
    size_hint_y: None
    height: self.minimum_height
    pos_hint: {'top': 1}
    canvas:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: self.theme_cls.divider_color
        Line:
            points: (self.x, self.y, self.x + self.width, self.y)
    MDLabel:
        text: 'FILTERS'
    MDList:
        spacing: root.spacing
        size_hint_y: None
        height: self.minimum_height
        id: container