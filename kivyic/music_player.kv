<PlayListsScreen>:
    name: 'PLAYLISTS'

<DailyMixScreen>:
    name: 'DAILY MIX'

<MusicPlayer>:
    screen_manager: _screen_manager
    controls: _controls
    content_selector: _content_selector
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: root.back_content_color
        Rectangle:
            size: self.size
            pos: self.pos
    ContentSelector:
        id: _content_selector
        #pos_hint: {'top': 1}
    ScreenManager:
        id: _screen_manager
        Screen:
            name: 'SONGS'
            SongsScreen:
        Screen:
            name: 'ALBUMS'
            AlbumsScreen:
        Screen:
            name: 'ARTISTS'
            ArtistsScreen:
        Screen:
            name: 'PLAYLISTS'
            PlayListsScreen:
        Screen:
            name: 'DAILY MIX'
            DailyMixScreen:
    Controls:
        id: _controls
        canvas.before:
            Color:
                rgba: mat_rsc.SPOTIFY_GREY
            Rectangle:
                size: self.size
                pos: self.pos