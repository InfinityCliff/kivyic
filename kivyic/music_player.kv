#: import mat_rsc kivyic.material_resources
#: import ICRoundedButton kivyic.button.ICRoundedButton
#: import AlphaScrollPane kivyic.scrollbar.AlphaScrollPane
#: import MDSwitch kivymd.selectioncontrols.MDSwitch
#: import ICSwitch kivyic.button.ICSwitch
#: import ICMultiPositionButton kivyic.button.ICMultiPositionButton

<MPBaseButton>:
    background_normal: ''
    background_down: ''
    background_color: 0,0,0,0
    pos_hint: {'center_y': 0.5}
    color: [0,0,0,1]
    size_hint: None, 1
    color: mat_rsc.SPOTIFY_TEXT

<MPHeaderButton@MPBaseButton>:
    size_hint_y: None
    height: '30dp'
    line_offset_x: 15
    line_offset_y: 5
    color: mat_rsc.SPOTIFY_TEXT if self.state == 'normal' else mat_rsc.SPOTIFY_TEXT_ACTIVE
    canvas.after:
        Color:
            rgba:mat_rsc.SPOTIFY_BRT_GREEN if self.state == 'down' else [0,0,0,0]
        Line:
            points: (self.center_x - self.line_offset_x, self.y + self.line_offset_y, self.center_x + self.line_offset_x, self.y + self.line_offset_y)
            width: 2

<MPIconButton>:
    size_hint_y: None
    height: '30dp'
    color: mat_rsc.SPOTIFY_BUTTON
    text_color:
    on_press: self.color = mat_rsc.SPOTIFY_BUTTON_DOWN
    on_release: self.color = mat_rsc.SPOTIFY_BUTTON

<SongProgress@BoxLayout>
    Label:
        text: '0:00'
        size_hint_x: 0.20
    ProgressBar:
    Label:
        text: '0:00'
        size_hint_x: 0.20

<ContentSelector>:
    padding: 0, 0, 0, 5
    size_hint_y: None
    height: self.minimum_height
    Label:
        size_hint_y: None
        height: 0
    MPHeaderButton:
        text: 'SONGS'
        group: 'ContentSelector'
        state: 'down'
        on_release: root.dispatch('on_header_control', 'SONGS',  mat_rsc.SPOTIFY_SONGS)
    MPHeaderButton:
        text: 'ALBUMS'
        group: 'ContentSelector'
        on_release: root.dispatch('on_header_control', 'ALBUMS', mat_rsc.SPOTIFY_ALBUMS)
    MPHeaderButton:
        text: 'ARTISTS'
        group: 'ContentSelector'
        on_release: root.dispatch('on_header_control', 'ARTISTS', mat_rsc.SPOTIFY_ARTISTS)
    MPHeaderButton:
        text: 'PLAYLISTS'
        group: 'ContentSelector'
        on_release:  root.dispatch('on_header_control', 'PLAYLISTS', mat_rsc.SPOTIFY_PLAYLISTS)
    MPHeaderButton:
        text: 'DAILY MIX'
        group: 'ContentSelector'
        on_release: root.dispatch('on_header_control', 'DAILY MIX', mat_rsc.SPOTIFY_DAILY_MIX)
    Label:
        size_hint_y: None
        height: 0

<Controls>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: 0, 10
    BoxLayout:
        size_hint_y: None
        height: self.minimum_height
        Label:
        MPIconButton:
            icon: 'shuffle-variant'
            color: root.shuffle_color    #mat_rsc.SPOTIFY_LT_GREY if root.shuffle_color is [] else root.shuffle_color
            on_press: root.dispatch('on_control', 'shuffle', not root.shuffle_state)
        MPIconButton:
            icon: 'skip-previous'
            on_press: root.dispatch('on_control', 'previous')
        MPIconButton:
            icon: root.play_pause_icon
            on_press: root.dispatch('on_control', 'pause', root.is_playing) if root.is_playing else root.dispatch('on_control', 'play', root.is_playing)
        MPIconButton:
            icon: 'skip-next'
            on_press: root.dispatch('on_control', 'next')
        ICMultiPositionButton:
            icon: 'repeat'
            positions: ['off', 'track', 'context']
            position: 'off'
            color: root.repeat_color  #mat_rsc.SPOTIFY_LT_GREY if root.repeat_color is [] else root.repeat_color
            on_press: root.dispatch('on_control', 'repeat', self.position)
        Label:
    SongProgress:
        size_hint_y: None
        height: '25dp'

<SongView>:
    on_press: self.background_color = 0,0,0,.2
    on_release:
        self.background_color = 0,0,0,0
        self.callback('track', self.track_id, self.title)
    background_color: 0,0,0,0
    size_hint_y: None
    height: self.minimum_height
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        cols: 1
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Label:
            text: '[b]' + root.title + '[/b]'
            markup: True
            size_hint: None, None
            size: self.texture_size
        Label:
            text: root.artist + '  *  ' + root.album
            color: mat_rsc.SPOTIFY_LT_GREY
            size_hint: None, None
            font_size: 12
            size: self.texture_size
    MPIconButton:
        icon: 'dots-horizontal'
        size_hint_x: None
        width: root.height

<SongsScreen>:
    song_list: _song_list
    orientation: 'vertical'
    AlphaScrollPane:
        id: _song_list

<AlbumView>:
    on_press: self.background_color = 0,0,0,.2
    on_release:
        self.background_color = 0,0,0,0
        self.callback('album', self.album_id, self.title)
    background_color: 0,0,0,0
    size_hint_y: None
    height: self.minimum_height
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        padding: 2
        size_hint_x: None
        width: '50dp'
        Image:
            source: None if root.cover_art == '' else root.cover_art
    BoxLayout:
        cols: 1
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Label:
            text: '[b]' + root.title + '[/b]'
            markup: True
            size_hint: None, None
            size: self.texture_size
        Label:
            text: root.artist
            color: mat_rsc.SPOTIFY_LT_GREY
            size_hint: None, None
            font_size: 12
            size: self.texture_size
    MPIconButton:
        icon: 'chevron-right'
        size_hint_x: None
        width: root.height

<AlbumsScreen>:
    album_list: _album_list
    orientation: 'vertical'
    AlphaScrollPane:
        id: _album_list

<ArtistView>:
    on_press: self.background_color = 0,0,0,.2
    on_release: self.background_color = 0,0,0,0
    background_color: 0,0,0,0
    size_hint_y: None
    height: self.minimum_height
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: 'img'
        size_hint_x: None
        width: root.height
    BoxLayout:
        cols: 1
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Label:
            text: '[b]' + root.artist + '[/b]'
            markup: True
            size_hint: None, None
            size: self.texture_size
        Label:
            text: str(root.song_count) + ' songs - ' + str(root.album_count) + ' albums'
            color: mat_rsc.SPOTIFY_LT_GREY
            size_hint: None, None
            font_size: 12
            size: self.texture_size

    MPIconButton:
        icon: 'chevron-right'
        size_hint_x: None
        width: root.height

<ArtistsScreen>:
    artist_list: _artist_list
    orientation: 'vertical'
    AlphaScrollPane:
        id: _artist_list

<PlayListView>:
    on_press: self.background_color = 0,0,0,.2
    on_release:
        self.background_color = 0,0,0,0
        self.callback('playlist', self.play_list_id, self.play_list_id)
    background_color: 0,0,0,0
    size_hint_y: None
    height: self.minimum_height
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        padding: 2
        size_hint_x: None
        width: '50dp'
        Image:
            source: None if root.play_list_art == '' else root.play_list_art
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Label:
            text: '[b]' + root.play_list_name + '[/b]'
            markup: True
            size_hint: None, None
            size: self.texture_size
        Label:
            text: str(root.song_count) + ' songs'
            color: mat_rsc.SPOTIFY_LT_GREY
            size_hint: None, None
            font_size: 12
            size: self.texture_size

    MPIconButton:
        icon: 'chevron-right'
        size_hint_x: None
        width: root.height

<PlayListsScreen>:
    play_list: _play_list
    orientation: 'vertical'
    AlphaScrollPane:
        id: _play_list

<DailyMixScreen>:


<NowPlayingScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Play Album'
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: root.cover
                Label:
                    text: root.track
                Label:
                    text: root.album + ' * ' + root.artist
        Label:
            text: 'TRACKS'

<SecondaryControls>:
    size_hint_y: None
    height: '30dp'
    ICRoundedButton:
        size_hint_x: 0.25
        pos_hint: {'x': 0.05, 'top': 1}
        text: 'Shuffle Play'
        background_color_normal: mat_rsc.SPOTIFY_GREEN
        background_color_down: mat_rsc.SPOTIFY_DARK_GREEN
        on_release: root.dispatch('on_secondary_control', 'Shuffle Play')
    BoxLayout:
        size_hint_x: 0.3
        pos_hint: {'right': 0.96, 'top': 1}
        Label:
            id: lbl
            text: 'Download'
        ICSwitch:
            width: '30dp'
            thumb_color_down: [1,1,1,1]
            _track_color_active: mat_rsc.SPOTIFY_BRT_GREEN
            outline_line_width: 1
            on_active:
                root.dispatch('on_secondary_control', 'download') if self.active else root.dispatch('on_secondary_control', 'de-download')
                lbl.text = 'Downloaded' if self.active else 'Download'



<MusicPlayer>:
    screen_manager: _screen_manager
    controls: _controls
    secondary_controls: _secondary_controls
    content_selector: _content_selector
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: root.back_content_color
        Rectangle:
            size: self.size
            pos: self.pos
    ContentSelector:
        id: _content_selector
    SecondaryControls:
        id: _secondary_controls
    ScreenManager:
        id: _screen_manager
        SongsScreen:
            name: 'SONGS'
            play_callback: root.player.play
            content: root.player.track_list.to_dict(orient='records')
        AlbumsScreen:
            name: 'ALBUMS'
            play_callback: root.player.play
            content: root.player.album_list.to_dict(orient='records')
        ArtistsScreen:
            name: 'ARTISTS'
            play_callback: root.player.play
            content: root.player.artist_list.to_dict(orient='records')
        PlayListsScreen:
            name: 'PLAYLISTS'
            play_callback: root.player.play
            content: root.player.play_list.to_dict(orient='records')
        DailyMixScreen:
            name: 'DAILY MIX'
            play_callback: root.player.play
        NowPlayingScreen:
            name: 'NOW PLAYING'
    Controls:
        id: _controls
        canvas.before:
            Color:
                rgba: mat_rsc.SPOTIFY_GREY
            Rectangle:
                size: self.size
                pos: self.pos