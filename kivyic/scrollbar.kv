
<AlphaScrollItemLabel>:
    view_item: _view_item
    size_hint_y: None
    height: self.minimum_height
    Label:
        id: _view_item
        text: root.text
        size_hint_y: None
        height: 60
        valign: 'middle'
        font_size: 12

<-AlphaScrollItemButton>:
    view_item: _view_item
    size_hint_y: None
    height: self.minimum_height
    Button:
        id: _view_item
        text: root.text
        size_hint_y: None
        height: 60
        valign: 'middle'
        font_size: 12
        on_release: root.parent.parent.add_item({'text': 'A9'})

<-AlphaScrollViewSeparators>:
    view_item: _view_item
    size_hint_y: None
    height: self.minimum_height
    Label:
        id: _view_item
        text: root.text
        size_hint_y: None
        height: 20
        valign: 'middle'
        font_size: 12




<AlphaScrollPane>:
    padding: '10dp'


<AlphaScrollView>:
    _container: container
    GridLayout:
        id: container
        cols: 1
        size_hint_y: None

<AlphaSlider>:
    layout: _layout
    background_width: 0
    GridLayout:
        cols: 1
        id: _layout
        pos: self.parent.x, self.parent.y + self.parent.padding / 2
        size: self.parent.width, self.parent.height - self.parent.padding
