<AlphaSlider>:
    layout: _layout
    background_width: 0
    size_hint: 0.1, None
    #pos_hint: {'center_y': .5}
    #center_y: self.parent.center_y
    #center_y: app.asp.height / 2
    padding: '20sp'
    height: _layout.height+ self.padding
    canvas.before:
        Color:
            rgba: 1,0,0,.3
        Rectangle:
            size: self.size
            pos: self.pos
    RelativeLayout:
        size: self.parent.size
        pos: self.parent.pos
        #pos_hint: {'center_y': .5}
        canvas.after:
            Color:
                rgba: 1,1,1,.2
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 1
            id: _layout
            #x: self.parent.x
            center_y: self.parent.center_y
            #pos_hint: {'center_y': .5}
            size_hint: 1, None
            size: self.parent.width, self.minimum_height
            canvas.after:
                Color:
                    rgba: 0,0,1,.3
                Rectangle:
                    size: self.size
                    pos: self.pos

<AlphaSBLabel>:
    halign: 'center'
    valign: 'middle'
    size_hint: 1, None
    size: self.texture_size
