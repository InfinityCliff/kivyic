<AlphaSBLabel>:
    halign: 'center'
    valign: 'middle'
    size_hint: 1, None
    size: self.texture_size

<AlphaSlider>:
    layout: _layout
    slider: _slider
    size_hint: None, 0.95
    width: '30dp'
    pos_hint: {'center_y': .5, 'right': 1}
    Slider:
        id: _slider
        #size: root.size
        size_hint_y: None
        padding: '20dp'
        height: root.layout.height + self.padding
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        #pos: root.pos
        orientation: root.orientation
        step: root.step
        min: root.min
        max: root.max
        value_track: root.value_track
        value: root.value
        value_normalized: root.value_normalized
        background_width: 0
    BoxLayout:
        id: _layout
        cols: 1
        orientation: 'vertical'
        id: _layout
        size_hint: None, None
        width: '20dp'
        height: self.minimum_height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<AlphaBin>:
    bin_container: _bin_container
    sort_key: root.parent.sort_key if root.parent else ''
    size_hint_y: None
    height: self.minimum_height
    pos_hint_y: {'center_y': 1}
    cols: 1
    Label:
        text: root.bin_title if len(_bin_container.children) > 0 else ''
        size_hint_y: None
        height: '20dp' if len(_bin_container.children) > 0 else 0
    GridLayout:
        id: _bin_container
        cols: 1
        size_hint_y: None
        height: self.minimum_height

<AlphaBinView>:
    cols: 1
    size_hint_y: None

<AlphaScrollView>:
    id: alphascrollview
    pos_hint: {'center_y': 0.5}
    size_hint_x: 0.96

<AlphaScrollPane>:
    padding: '10dp'